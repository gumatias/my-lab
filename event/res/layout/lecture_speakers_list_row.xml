<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:orientation="horizontal"
    android:paddingBottom="5dip"
    android:paddingTop="5dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="10dip" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/speaker_name_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:src="@drawable/palestrante_nome" />

            <TextView
                android:id="@+id/speaker_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="60dip"
                android:paddingTop="13dip"
                android:singleLine="true"
                android:text="@string/filter"
                android:textColor="@color/red"
                android:textSize="15dip" />

            <ImageView
                android:id="@+id/speaker_picture"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/anonimo" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
        	android:id="@+id/speaker_arrow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/next_btn_selector" />
    </LinearLayout>

</LinearLayout>