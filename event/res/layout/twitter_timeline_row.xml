<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/social_tweets_row_layout_0"
    android:layout_width="fill_parent"
    android:layout_height="120dip"
    android:background="@drawable/list_item_selector"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/social_tweets_row_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/tweet_userpic"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/anonimo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/social_tweets_row_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tweet_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/tweet_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/favorites"
            android:textColor="@color/gray"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>